[ -f /etc/banner ] && cat /etc/banner

export PS1='\u:\w\$ '
SDCARD=/
[ -d /sdcard ]     && SDCARD=/sdcard
[ -d /sdcard-ext ] && SDCARD=/sdcard-ext
[ -d /sd-ext ]     && SDCARD=/sd-ext

export ENV=$SDCARD/.profile
export HOME=$SDCARD

alias l='ls -al'

alias findinfiles='find . -type f | grep -v "LOST.DIR" | xargs grep -insI '

